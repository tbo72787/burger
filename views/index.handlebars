<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>Burgers not yet devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}

              <button class="devour" data-id="{{id}}">
                DEVOUR!
              </button>

              <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
            </li>

          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-lg-4">
      <img src="../public/img/burger.png">
    </div>

    <div class="col-lg-4">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}

              <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>

  </div>
</div>